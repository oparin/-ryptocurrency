{% extends '::base.html.twig' %}

{% form_theme form '::theme.html.twig' %}

{% block left_menu %}
    {% include ('AdminCareerBundle::left_menu.html.twig') %}
{% endblock left_menu %}

{% block page_title %}<span class="icon-settings"></span>Присвоенные ранги{% endblock page_title %}

{% block main_content %}
    <div class="wrapper">
        {% for flash_message in app.session.flashbag.get('success') %}
            {% include ':notifications:success_note.html.twig' with {'message' : flash_message} %}
        {% endfor %}
        {% for flash_message in app.session.flashbag.get('error') %}
            {% include ':notifications:error_note.html.twig' with {'message' : flash_message} %}
        {% endfor %}
        <div class="fluid">
            {{ form_start(form) }}
            <fieldset>
                <div class="widget fluid">
                    <div class="whead"><h6>Начисление бонуса</h6><div class="clear"></div></div>
                    <div class="formRow">
                        <div class="grid3">
                            {{ form_label(form.sum, 'Сумма :') }}
                        </div>
                        <div class="grid9">
                            {{ form_widget(form.sum) }}
                            {% if form_errors(form.sum) %}
                                <span class="note-error">{{ form_errors(form.sum) }}</span>
                            {% endif %}
                        </div>
                        <div class="clear"></div>
                    </div>

                    <div class="formRow">
                        <div class="grid3">
                            {{ form_label(form.comment, 'Комментарий :') }}
                        </div>
                        <div class="grid9">
                            {{ form_widget(form.comment) }}
                            {% if form_errors(form.comment) %}
                                <span class="note-error">{{ form_errors(form.comment) }}</span>
                            {% endif %}
                        </div>
                        <div class="clear"></div>
                    </div>

                    <div class="formRow">
                        <div class="grid3">&nbsp;</div>
                        <div class="grid9">
                            <input type="submit" class="buttonS bBlue formButton" value="{{ 'save'|trans }}">
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </fieldset>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock main_content %}