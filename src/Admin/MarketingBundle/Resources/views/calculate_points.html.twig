{% extends '::base.html.twig' %}

{% form_theme form '::theme.html.twig' %}

{% block left_menu %}
    {% include ('AdminMarketingBundle::left_menu.html.twig') %}
{% endblock left_menu %}

{% block page_title %}<span class="icon-settings"></span>Маркетинг{% endblock page_title %}

{% block main_content %}
    <div class="wrapper">
    {% for flash_message in app.session.flashbag.get('success') %}
        {% include ':notifications:success_note.html.twig' with {'message' : flash_message} %}
    {% endfor %}
    {% for flash_message in app.session.flashbag.get('error') %}
        {% include ':notifications:error_note.html.twig' with {'message' : flash_message} %}
    {% endfor %}
    <div class="fluid">
        <fieldset>
            <div class="widget fluid">
                <div class="whead"><h6>Пересчитать баллы</h6><div class="clear"></div></div>
                <div id="collapse4" class="body">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}
                    {{ form_rest(form) }}
                    <div class="formRow">
                        <div class="grid3">&nbsp;</div>
                        <div class="grid9">
                            <input type="submit" class="buttonS bBlue formButton" value="Пересчитать">
                        </div>
                        <div class="clear"></div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </fieldset>
    </div>
    </div>
{% endblock main_content %}