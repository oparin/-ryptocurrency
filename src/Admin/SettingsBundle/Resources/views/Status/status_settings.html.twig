{% extends '::base.html.twig' %}

{% form_theme form '::theme.html.twig' %}

{% block left_menu %}
    {% include ('AdminSettingsBundle::left_menu.html.twig') %}
{% endblock left_menu %}

{% block page_title %}<span class="icon-settings"></span>Статусы пользователей{% endblock page_title %}

{% block main_content %}
    <div class="wrapper">
        {% for flash_message in app.session.flashbag.get('success') %}
            {% include ':notifications:success_note.html.twig' with {'message' : flash_message} %}
        {% endfor %}
        {% for flash_message in app.session.flashbag.get('error') %}
            {% include ':notifications:error_note.html.twig' with {'message' : flash_message} %}
        {% endfor %}
        <div class="fluid">
            {{ form_start(form) }}
            <fieldset>
                <div class="widget fluid">
                    <div class="whead"><h6>Статус</h6><div class="clear"></div></div>
                    <div class="formRow">
                        <div class="grid3">
                            {{ form_label(form.name, 'Имя статуса:') }}
                        </div>
                        <div class="grid9">
                            {{ form_widget(form.name) }}
                            {% if form_errors(form.name) %}
                                <span class="note-error">{{ form_errors(form.name) }}</span>
                            {% endif %}
                        </div>
                        <div class="clear"></div>
                    </div>

                    <div class="formRow">
                        <div class="grid3">
                            {{ form_label(form.price, 'Цена:') }}
                        </div>
                        <div class="grid9">
                            {{ form_widget(form.price) }}
                            {% if form_errors(form.price) %}
                                <span class="note-error">{{ form_errors(form.price) }}</span>
                            {% endif %}
                        </div>
                        <div class="clear"></div>
                    </div>

                    <div class="formRow">
                        <div class="grid3">
                            {{ form_label(form.percent, 'Процент от баллов (%):') }}
                        </div>
                        <div class="grid9">
                            {{ form_widget(form.percent) }}
                            {% if form_errors(form.percent) %}
                                <span class="note-error">{{ form_errors(form.percent) }}</span>
                            {% endif %}
                        </div>
                        <div class="clear"></div>
                    </div>

                    <div class="formRow">
                        <div class="grid3">
                            {{ form_label(form.credits, 'Юниты:') }}
                        </div>
                        <div class="grid9">
                            {{ form_widget(form.credits) }}
                            {% if form_errors(form.credits) %}
                                <span class="note-error">{{ form_errors(form.credits) }}</span>
                            {% endif %}
                        </div>
                        <div class="clear"></div>
                    </div>

                    <div class="formRow">
                        <div class="grid3">
                            {{ form_label(form.imageFile, 'Изображение:') }}
                        </div>
                        <div class="grid9">
                            {{ form_widget(form.imageFile) }}
                            {% if form_errors(form.imageFile) %}
                                <span class="note-error">{{ form_errors(form.imageFile) }}</span>
                            {% endif %}
                        </div>
                        <div class="clear"></div>
                    </div>

                    <div class="formRow">
                        <div class="grid3">
                            {{ form_label(form.description, 'Описание:') }}
                        </div>
                        <div class="grid9">
                            {{ form_widget(form.description) }}
                            {% if form_errors(form.description) %}
                                <span class="note-error">{{ form_errors(form.description) }}</span>
                            {% endif %}
                        </div>
                        <div class="clear"></div>
                    </div>

                    <div class="formRow">
                        <div class="grid3">&nbsp;</div>
                        <div class="grid9">
                            <input type="submit" class="buttonS bBlue formButton" value="{{ 'save'|trans }}">
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </fieldset>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>

        <div class="fluid">
            <!-- Media table -->
            <div class="widget">
                <div class="whead">
                    <span class="titleIcon">
                        <div style="text-align: center">
                            <img src="{{ asset('images/database-table-icon.png') }}" width="16">
                        </div>
                    </span>
                    <h6>Все статусы</h6><div class="clear"></div>
                </div>
                <div id="dyn" class="hiddenpars">
                    {#<a title="Options" class="tOptions"><img alt="" src="{{ asset('lib/aquincum/images/icons/options') }}"></a>#}
                    <div id="dynamic_wrapper" class="dataTables_wrapper" role="grid">
                        {#<div class="tablePars">#}
                            {#{{ grid_search(grid, '::grid.html.twig') }}#}
                        {#</div>#}

                        {{ grid(grid, '::grid.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock main_content %}