                                {{ form_widget(form.skype, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                                {% if form_errors(form.skype) %}
                                    <span class="form-error">{{ form_errors(form.skype) }}</span>
                                {% endif %}
