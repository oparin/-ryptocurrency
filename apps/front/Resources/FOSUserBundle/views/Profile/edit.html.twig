                            {#{{ form_label(form.username, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}#}
                            {#<div class="col-md-6 col-sm-6 col-xs-12">#}
                                {#{{ form_widget(form.username, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}#}
                                {#{% if form_errors(form.username) %}#}
                                    {#<span class="form-error">{{ form_errors(form.username) }}</span>#}
                                {#{% endif %}#}
                            {#</div>#}
                        {#</div>#}
                        {#<div class="form-group">#}
                            {#{{ form_label(form.email, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}#}
                            {#<div class="col-md-6 col-sm-6 col-xs-12">#}
                                {#{{ form_widget(form.email, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}#}
                                {#{% if form_errors(form.email) %}#}
                                    {#<span class="form-error">{{ form_errors(form.email) }}</span>#}
                                {#{% endif %}#}
                            {#</div>#}
                        {#</div>#}
                        <div class="form-group">
                            {{ form_label(form.fullName, 'home.registration.full_name'|trans, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.fullName, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                                {% if form_errors(form.fullName) %}
                                    <span class="form-error">{{ form_errors(form.fullName) }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.country, 'home.registration.country'|trans, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.country, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                                {% if form_errors(form.country) %}
                                    <span class="form-error">{{ form_errors(form.country) }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.city, 'home.registration.city'|trans, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.city, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                                {% if form_errors(form.city) %}
                                    <span class="form-error">{{ form_errors(form.city) }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
