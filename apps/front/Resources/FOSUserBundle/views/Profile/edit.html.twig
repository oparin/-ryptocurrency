                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.address, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                                {% if form_errors(form.address) %}
                                    <span class="form-error">{{ form_errors(form.address) }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.skype, null, {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
